<Window x:Class="MazeGame.NewGameWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MazeGame"
        mc:Ignorable="d"
        Title="新建游戏" Height="216" Width="232.317">
    <StackPanel>
        <StackPanel Margin="10" Orientation="Horizontal" HorizontalAlignment="Center">
            <Label>高度</Label>
            <TextBox x:Name="textHeight" VerticalAlignment="Center">20</TextBox>
		</StackPanel>
        <StackPanel Margin="10" Orientation="Horizontal" HorizontalAlignment="Center">
            <Label>宽度</Label>
            <TextBox x:Name="textWidth" VerticalAlignment="Center">30</TextBox>
        </StackPanel>
        <StackPanel Margin="10" Orientation="Horizontal" HorizontalAlignment="Center">
            <Label>迷宫类型</Label>
            <ComboBox x:Name="cbType"></ComboBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Margin="10,0" Height="30" Width="60" Click="Button_OK_Click">确定</Button>
            <Button Margin="10,0" Height="30" Width="60" Click="Button_Cancel_Click">取消</Button>
		</StackPanel>
    </StackPanel>
</Window>
